.c-product-gallery

  +breakpoint(sm)
    flex-direction row-reverse

  img
    display block
    width 100%

  &__nav
    display none

    +breakpoint(sm)
      display block
      margin -0.25rem 0 0
      padding-right 0.25rem
      width 4rem

    +breakpoint(md)
      width 5rem

    +breakpoint(lg)
      width 6rem

  &__nav-item
    +breakpoint(sm)
      padding 0.25rem 0 0 0.25rem
