.showcase
  margin -0.5em 0 0 -0.5em

  +breakpoint(sm)
    margin -1em 0 0 -1em

  +breakpoint(md)
    margin -1.5em 0 0 -1.5em

  +breakpoint(xl)
    margin -2em 0 0 -2em

  > .showcase__item
    flex 0 0 50%
    padding 0.5em 0 0 0.5em

    +breakpoint(sm)
      padding 1em 0 0 1em

    +breakpoint(md)
      flex 0 0 33.3333%
      padding 1.5em 0 0 1.5em

    +breakpoint(lg)
      flex 0 0 25%

    +breakpoint(xl)
      flex 0 0 20%
      padding 2em 0 0 2em

  &__item
    display flex

  &__wrapper
    background #fff
    position relative
    flex 1

  &__image
    display block
    width 100%

  &__info
    padding 0.5em

    +breakpoint(sm)
      padding 1em

  &__name,
  &__price
    font-family $font-heading

  &__price-wrapper
    padding-top 0.5rem

  &__price
    color darken(#fff, 75)
    font-size rem(14)

  &__name
    text-transform uppercase
    font-size rem(16)

  &__description
    color darken(#fff, 50)
    font-size rem(12)
