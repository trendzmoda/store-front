.showcase

  +breakpoint(sm)
    margin -1em 0 0 -1em

  +breakpoint(md)
    margin -1.5em 0 0 -1.5em

  +breakpoint(xl)
    margin -2em 0 0 -2em

  > .showcase__item
    +breakpoint(sm)
      flex 0 0 50%
      padding 1em 0 0 1em

    +breakpoint(md)
      flex 0 0 33.3333%
      padding 1.5em 0 0 1.5em

    +breakpoint(xl)
      flex 0 0 25%
      padding 2em 0 0 2em

  &__image
    display block
    width 100%

  &__name
    text-transform uppercase
