doctype

//- dependencies
include ../util/includes

//- vars
- meta = { title: config.APP_NAME }
- postfix = (ENV === 'production') ? '.min' : ''
block baseVars

//- template
html.no-js.root(lang='pt-BR')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    +doc('DEV ONLY')
      meta(name='robots', content='noindex, nofollow')
    //- meta(name='theme-color', content=data.colors[currentSection || 'system'])
    title= meta.title
    meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')

    +google-fonts('Muli|Oxygen')
    +css('base')
    block baseStyles

  body
    block baseContent

    +js('//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery')

    block baseScripts
